.card__wrap
  width 600px
  height 380px
  // height 20vw
  top: -240px
  // margin-left  40px
  position absolute
  background: #1b46f8a3
  color #eeeeeebd
  box-shadow: 0 0 4vw black
  display: flex
  opacity 0
  visibility: hidden
  padding: 1vw 2vw
  z-index 88
  justify-content space-around
  transition-duration: 0.5s
  transition-delay: 0.1s
@media (min-width: 300px) and (max-width: 700px)
  .card__wrap
    display: none
    
.card__title
  font-size: 1.2rem
  font-weight: bold
  text-align: center
  display block
.addit__title
  width 100%
  text-align: center
  font-size: 0.9rem
.card__text
  margin-top 10px
  width 100%
  text-align: left 
  font-size: 0.8rem
