.card__form
  display: flex
  flex-direction: column
.card__column--left
  width: 50%

.label-box
  margin 0.5vw 15px
input 
  box-sizing: border-box
  padding: 4px
  width: 95%
  border: none
  font-size: 18px;
  box-shadow: 0 0.5vw 4vw black
  background: #fff
  opacity 0.4
  margin 8px auto
  font-weight: bold
  color: #f1523a
  


input:hover, :focus
  opacity 0.7


.card__btn
  box-sizing: border-box
  margin: 15px auto
  display block
  cursor pointer
  padding: 5px
  width: 40%
  border: none
  font-size: 18px;
  box-shadow: 0 0.5vw 4vw black
  background: #f1523a
  opacity 0.7   
  color: white
  font-weight: bold
  transition-duration: 0.2s

.card__btn:hover
  opacity 0.9
  box-shadow: 0 0.1vw 0.5vw

figcaption
  text-align: center
  margin-top -2vw
  font-size: 1.6rem
  font-weight bold


