.item img
    width: 100%;
    position absolute

.item:nth-child(1) img
  background: white
  z-index 1

.item:nth-child(2) img
  background: red
.item:nth-child(3) img
  background: yellow
.item:nth-child(4) img
  background: green
.item:nth-child(5) img
  background: blue

.card__column
  width 50%
