.slider_2
  width: 100%;
  height 100%
  position relative
  

.item
  display: flex
  justify-content center
  

.arrows_wrapper
  position absolute
  bottom 30%
  width 100%
  z-index 999
  
.arrow
  transition-duration: 0.2s
  cursor pointer
  color: #f1523a
  font-size: 1.5rem
  display inline
.arrow:hover
  color: white
  

#prev
  position: absolute
  left 0
  
#next
  position: absolute
  right 0

.slide-img
  height 90%
  width: 100%
  
.price
  position: absolute
  text-align: center
  width 100%
  bottom: 0
  font-weight: bold
  font-size: 1.2rem
  z-index 9999
  display block