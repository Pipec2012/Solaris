
.product
   height: 100vh
   overflow: hidden
   
.product__background
   background: url("./img/kosmos-dark.png") center no-repeat
   background-size: cover
   position: absolute
   // z-index: -2
   height: 100vh
   width: 100%  

.product-list
   position: relative
   margin-top: 320px
   display: flex
   justify-content: space-between
   align-items: center
   padding: 0 10px 0 10px


.product-list__img
   width: 70%
   height 70%
   display: block
   margin:0 auto
   animation: rotation 9s infinite linear
   cursor: pointer
   position: relative
   z-index: 5
  

.product-img__wrap:hover .card__wrap
   opacity 1
   visibility visible
   box-shadow: 0 0 0 2500px rgba(0, 0, 0, 0.6)

@media (min-width: 300px) and (max-width: 700px)
   .product-img__wrap:hover .card__wrap
      display: flex
    

.product-img__wrap
   padding-top: 50px

